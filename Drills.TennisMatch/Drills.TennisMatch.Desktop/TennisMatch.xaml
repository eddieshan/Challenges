<Window x:Class="Drills.TennisMatch.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Drills.TennisMatch.Desktop"
        xmlns:controls="clr-namespace:Drills.TennisMatch.Desktop.Controls"
        xmlns:usercontrols="clr-namespace:Drills.TennisMatch.Desktop.UserControls"
        xmlns:converters="clr-namespace:Drills.TennisMatch.Desktop.Converters"
        Style="{StaticResource DefaultWindow}"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Drills.TennisMatch">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <usercontrols:ScoreBoard DataContext="{Binding ScoreBoard}"></usercontrols:ScoreBoard>
            <usercontrols:RefereePanel DataContext="{Binding RefereePanel}"></usercontrols:RefereePanel>
    </StackPanel>
</Window>